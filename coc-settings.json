{
  "diagnostic.displayByAle": true,
  "python.linting.enabled": true,
  "python.linting.flake8Args": [
    "--max-line-length=300",
    "--ignore=E501,C0301"
  ],
  "python.linting.flake8Enabled": true,
  "python.formatting.provider": "autopep8",
  "python.disableInstallationCheck": true,
  "python.venvFolders": [
    "envs",
    ".pyenv",
    ".direnv",
    "lib"
  ]
}
